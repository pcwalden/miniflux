{
    "name": "fguillot/picofeed",
    "description": "Modern library to handle RSS/Atom feeds",
    "homepage": "https://github.com/fguillot/picoFeed",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Frédéric Guillot"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-iconv": "*",
        "ext-dom": "*",
        "ext-xml": "*",
        "ext-libxml": "*",
        "ext-SimpleXML": "*"
    },
    "suggest": {
        "ext-curl": "PicoFeed will use cURL if present"
    },
    "autoload": {
        "psr-0": {"PicoFeed": "lib/"}
    },
    "bin" : [
        "picofeed"
    ]
}
